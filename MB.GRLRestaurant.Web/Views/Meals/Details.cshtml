@using MB.GRLRestaurant.Web.Models.Meals;
@model MealDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1>Details</h1>

    <div>
        <h4>Meal</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
        </dl>
    </div>

    <hr />
    <h3 class="my-4">Ingredients</h3>

    @*<ul class="list-group">
    @foreach (var ingredient in Model.Ingredients)
    {
    <li class="list-group-item">@ingredient.Name</li>
    }
    </ul>*@


    <table class="table datatables mt-2">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ingredient in Model.Ingredients)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => ingredient.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => ingredient.Name)
                    </td>
                    <td>
                        <a asp-controller="Ingredients" asp-action="Details" asp-route-id="@ingredient.Id" title="Details">
                            <i class="fa fa-info-circle text-info"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        <a class="btn btn-primary ms-2" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    </div>
</div>